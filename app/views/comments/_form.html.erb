<%= simple_form_for [@post, @comment] do |f| %>
  <div class="form-group">
    <%= f.input :body, required: true, class: "form-control" %>
  </div>
  <div class="form-group text-right">
    <%= f.button :submit, "Submit", class:"btn btn-default" %>
  </div>
<% end %>
