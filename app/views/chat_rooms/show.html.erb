

<div class="col-sm-12" id="chat_room">
  <div  class="panel panel-default">
    <div class="panel-heading"><h4><%= @chat_room.title %></h4></div>
    <div id="messages" class="panel-body" data-chat-room-id="<%= @chat_room.id %>">
      <%= render @chat_room.messages %>
    </div>
    <div class="panel-footer">
      <%= simple_form_for @message, url: '#' do |f| %>
        <div class="form-group">
          <%= f.input :body, class: 'form-control', label: false %>
          <small class="text-muted">From 2 to 1000 characters</small>
          <div class="text-right">
            <%= f.submit "POST", class: 'btn btn-default btn-md' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
